    <script>
        // Cookie Consent
        const cookieConsent = document.getElementById('cookieConsent');
        const cookieAccept = document.getElementById('cookieAccept');
        const cookieReject = document.getElementById('cookieReject');
        const cookieCustomize = document.getElementById('cookieCustomize');

        // Check if consent already given
        if (!localStorage.getItem('cookieConsent')) {
            setTimeout(() => {
                cookieConsent.style.display = 'block';
            }, 1000);
        }

        cookieAccept.addEventListener('click', () => {
            localStorage.setItem('cookieConsent', 'accepted');
            localStorage.setItem('cookiesAnalytics', 'true');
            localStorage.setItem('cookiesMarketing', 'true');
            cookieConsent.style.display = 'none';
            showNotification('Préférences cookies enregistrées.');
        });

        cookieReject.addEventListener('click', () => {
            localStorage.setItem('cookieConsent', 'rejected');
            localStorage.setItem('cookiesAnalytics', 'false');
            localStorage.setItem('cookiesMarketing', 'false');
            cookieConsent.style.display = 'none';
            showNotification('Cookies non essentiels refusés.');
        });

        cookieCustomize.addEventListener('click', () => {
            showCookieSettings();
        });

        function showCookieSettings() {
            const settings = `
                <div style="background: white; padding: 30px; border-radius: 8px; max-width: 500px; margin: 0 auto;">
                    <h3>Personnaliser vos préférences cookies</h3>
                    <p>Conformément à l'article 82 de la loi Informatique et Libertés</p>
                    
                    <div style="margin: 20px 0;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                            <strong>Cookies essentiels</strong>
                            <span style="color: var(--secondary);">Toujours actifs</span>
                        </div>
                        <p style="font-size: 0.9rem; color: var(--gray-600);">Nécessaires au fonctionnement du site</p>
                    </div>
                    
                    <div style="margin: 20px 0;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                            <strong>Cookies analytiques</strong>
                            <label class="switch">
                                <input type="checkbox" id="analyticsCookies" checked>
                                <span class="slider"></span>
                            </label>
                        </div>
                        <p style="font-size: 0.9rem; color: var(--gray-600);">Nous aident à améliorer notre site</p>
                    </div>
                    
                    <div style="margin: 20px 0;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
                            <strong>Cookies marketing</strong>
                            <label class="switch">
                                <input type="checkbox" id="marketingCookies">
                                <span class="slider"></span>
                            </label>
                        </div>
                        <p style="font-size: 0.9rem; color: var(--gray-600);">Pour des publicités personnalisées</p>
                    </div>
                    
                    <div style="display: flex; gap: 10px; margin-top: 30px;">
                        <button class="btn" onclick="saveCookieSettings()">Enregistrer mes préférences</button>
                        <button class="btn btn-outline" onclick="cookieConsent.style.display = 'none'">Fermer</button>
                    </div>
                </div>
            `;
            
            // In a real implementation, you would show this in a modal
            alert("Fonctionnalité de personnalisation des cookies. Dans une implémentation réelle, cette fenêtre permettrait de configurer chaque type de cookie.");
        }

        function saveCookieSettings() {
            const analytics = document.getElementById('analyticsCookies').checked;
            const marketing = document.getElementById('marketingCookies').checked;
            
            localStorage.setItem('cookieConsent', 'custom');
            localStorage.setItem('cookiesAnalytics', analytics);
            localStorage.setItem('cookiesMarketing', marketing);
            
            cookieConsent.style.display = 'none';
            showNotification('Préférences cookies enregistrées.');
        }

